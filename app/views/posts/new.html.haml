.form
  = form_for [@post] do |f|
    .contener
      %ul.contener__header
        %li.contener__header__icon
          = icon('fa', 'pen')
        %li.contener__header__logo
          投稿する
    -# .category-header__box
    -#   %ul.category-header__box__menu
    -#     %li.category-header__box__menu__name
    -#   = f.collection_check_boxes :category_ids, Category.all, :id, :title, class: 'category-header__box__menu__checkboxes'
    .contener-text
      = f.text_area :text, class: 'contener-text__text'
    .contener-image
      = f.label :image, class: 'contener-image__image' do
        = icon('fas', 'image', class: 'contener-image__image__icon')
        = f.file_field :image, class: 'contener-image__image__file'

    = f.submit 'share', class: 'share-btn'